<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<BorderPane xmlns="http://javafx.com/javafx/17"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.exemple.grecrutement.RenduMissionController"
            style="-fx-background-color: #f5f5f5;">

    <top>
        <VBox spacing="10" style="-fx-background-color: #3498db; -fx-padding: 20;">
            <HBox alignment="CENTER_LEFT" spacing="15">
                <Label text="Évaluation de Code avec AI"
                       style="-fx-text-fill: white; -fx-font-size: 24px; -fx-font-weight: bold;"/>
                <Region HBox.hgrow="ALWAYS"/>
                <!-- Navigation Back Button -->
                <Button text="⬅️ Retour aux Missions" onAction="#retourMissions"
                        style="-fx-background-color: #5E548E; -fx-text-fill: white; -fx-font-weight: bold;
                               -fx-pref-width: 180; -fx-background-radius: 5; -fx-padding: 8 15;"/>
            </HBox>
            <Label text="Soumettez votre code Python pour évaluation automatique"
                   style="-fx-text-fill: #ecf0f1; -fx-font-size: 14px;"/>
        </VBox>
    </top>

    <center>
        <SplitPane dividerPositions="0.4">

            <!-- Left: Code Submission Panel -->
            <VBox spacing="15" style="-fx-padding: 20; -fx-background-color: white;">
                <Label text="Soumission de Code" style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;"/>

                <GridPane hgap="10" vgap="10">
                    <Label text="ID Candidat:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
                    <TextField fx:id="txtCandidatId" GridPane.rowIndex="0" GridPane.columnIndex="1"
                               promptText="Entrez ID candidat"/>

                    <Label text="ID Mission:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
                    <TextField fx:id="txtMissionId" GridPane.rowIndex="1" GridPane.columnIndex="1"
                               promptText="Entrez ID mission"/>

                    <Label text="Type Mission:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
                    <ComboBox fx:id="comboMissionType" GridPane.rowIndex="2" GridPane.columnIndex="1"
                              prefWidth="150"/>
                </GridPane>

                <Label text="Code Python:"/>
                <TextArea fx:id="txtCodeSolution"
                          style="-fx-font-family: 'Consolas', 'Monospaced'; -fx-font-size: 12px;"
                          prefRowCount="15" prefColumnCount="50"
                          promptText="def add(a, b):&#10;    return a + b&#10;&#10;# Écrivez votre solution ici..."/>

                <HBox spacing="10" alignment="CENTER_LEFT">
                    <Button fx:id="btnEvaluer" text="Évaluer avec AI"
                            style="-fx-background-color: #2ecc71; -fx-text-fill: white; -fx-font-weight: bold;"
                            prefWidth="150" prefHeight="35"/>
                    <ProgressIndicator fx:id="progressIndicator" visible="false"/>
                </HBox>

                <VBox spacing="5" style="-fx-background-color: #f8f9fa; -fx-padding: 15; -fx-border-color: #ddd; -fx-border-radius: 5;">
                    <Label text="Résultat de l'Évaluation:" style="-fx-font-weight: bold;"/>
                    <Label fx:id="lblResultat" text="En attente..."
                           style="-fx-font-size: 16px; -fx-padding: 5;"/>
                </VBox>

                <HBox spacing="10">
                    <Button text="Filtrer par Candidat" onAction="#filtrerParCandidat"
                            style="-fx-background-color: #9b59b6; -fx-text-fill: white;"/>
                    <Button text="Filtrer par Mission" onAction="#filtrerParMission"
                            style="-fx-background-color: #e74c3c; -fx-text-fill: white;"/>
                </HBox>
            </VBox>

            <!-- Right: Results Table -->
            <VBox spacing="15" style="-fx-padding: 20;">
                <HBox spacing="10" alignment="CENTER_LEFT">
                    <Label text="Historique des Rendu" style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;"/>
                    <Button fx:id="btnAfficher" text="Actualiser"
                            style="-fx-background-color: #3498db; -fx-text-fill: white;"/>
                    <Button fx:id="btnSupprimer" text="Supprimer"
                            style="-fx-background-color: #e74c3c; -fx-text-fill: white;"/>
                </HBox>

                <TableView fx:id="tableRendu" prefHeight="400">
                    <columns>
                        <TableColumn fx:id="colId" text="ID" prefWidth="50"/>
                        <TableColumn fx:id="colScore" text="Score" prefWidth="70"/>
                        <TableColumn fx:id="colResultat" text="Résultat" prefWidth="100"/>
                        <TableColumn fx:id="colMissionId" text="Mission ID" prefWidth="80"/>
                        <TableColumn fx:id="colCandidatId" text="Candidat ID" prefWidth="90"/>
                        <TableColumn fx:id="colDate" text="Date" prefWidth="120"/>
                        <TableColumn fx:id="colCode" text="Code" prefWidth="200"/>
                    </columns>
                </TableView>

                <Label text="*Double-cliquez sur une ligne pour voir les détails"
                       style="-fx-text-fill: #7f8c8d; -fx-font-size: 11px;"/>
            </VBox>

        </SplitPane>
    </center>

    <bottom>
        <HBox style="-fx-background-color: #34495e; -fx-padding: 10;" alignment="CENTER">
            <Label text="Système d'Évaluation AI - © Gestion Recrutement 2024"
                   style="-fx-text-fill: white; -fx-font-size: 12px;"/>
        </HBox>
    </bottom>

</BorderPane>